<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:key="setting"
        android:title="設定">
        <EditTextPreference
            android:key="char_size"
            android:title="フォントサイズ"
            android:dialogTitle="フォントサイズの変更"
            android:defaultValue="@string/initial_font_size"
            android:inputType="number" />
        
        <EditTextPreference
            android:key="unit_string"
            android:title="お金の単位"
            android:dialogTitle="お金の単位の変更"
            android:defaultValue="@string/initial_unit_string"
            android:inputType="text" />
        
